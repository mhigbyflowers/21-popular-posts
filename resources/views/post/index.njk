{% extends "master" %} {% block content %}
<div class="container">
  <ul class="collection with-header">
    <li class="collection-header">
      <div>
        <h4 class="grey-text text-darken-3">Posts<a href="posts/create" class="secondary-content">
  <i class="small material-icons blue-text text-darken-2">mode_edit</i></a></h4></div>
    </li>
    {% for post in posts %}
    <li class="collection-item">
      <div class="likes">
        <i class="tiny material-icons thumb-up">thumb_up</i>
        <p class="likes-number">0</p>
        <i class="tiny material-icons thumb-down">thumb_down</i>
      </div>

      <div class="post-info">
        <span class="title"><a href="{{post.post}}"><strong>{{post.title}}</strong></a></span>
        <div class="user"> Posted by: {{post.user.username}}</div>
      </div>

      <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
    </li>
    {% endfor %}
  </ul>
</div>

{% endblock %}
